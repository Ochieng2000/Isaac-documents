function closeNav(divcssname)
{
	var x = document.getElementsByTagName('A');
	for (var i=0;i<x.length;i++)
	{
		if (x[i].className == divcssname)
			{
			//alert("ok:"+divcssname);
			x[i].style.display = 'none';
			}
	}
}

function openNav(divcssname)
{
	var x = document.getElementsByTagName('A');
	for (var i=0;i<x.length;i++)
	{
		if (x[i].className == divcssname)
			x[i].style.display = 'block';
	}
}



